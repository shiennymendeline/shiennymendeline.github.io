            <img class="skills-doodle" src="images/doodle.png" />
            <br />
            <div class="skills-chips d-flex justify-content-center">
                @foreach (var cat in MyProfile.Skill.Categories)
                {
                    <div class="chip-info @(cat.IsSelected? "chip-info-checked" : "")" id="chip@(cat.Id)">
                        <input id="@("cb_"+cat.Id)" aria-label="@cat.Id" class="chip-info-cb" type="checkbox" @bind="@cat.IsSelected" />
                        <label for="@("cb_"+cat.Id)">@cat.Name</label>
                    </div>
                }
            </div>
            <div style="width:100%">
                <div class="skills-search">
                    <div class="input-group mb-3">
                        <input type="text" @bind="searchSkill" class="form-control" placeholder="Search Skill" aria-label="Search Skill" aria-describedby="button-addon2">
                        <button class="btn btn-outline-secondary" type="button" id="button-addon2">SEARCH</button>
                    </div>
                </div>
            </div>
            <div class="skills-results">
                <div class="d-flex flex-wrap justify-content-center w-100">
                    <BoxInfoSimple Name="NET" Caption="Experienced" ImgPath="@AppConstant.VerifiedImgPath" />
